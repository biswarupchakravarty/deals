<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="login-panel panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Please Sign In</h3>
        </div>
        <div class="panel-body">
          <form class="new_admin" id="new_admin" action="<%= admin_session_path %>" accept-charset="UTF-8" method="post">
            <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
            <fieldset>
              <div class="form-group">
                <input class="form-control" placeholder="E-mail" name="admin[email]" type="email" autofocus>
              </div>
              <div class="form-group">
                <input class="form-control" placeholder="Password" name="admin[password]" type="password" value="">
              </div>
              <div class="checkbox">
                <label>
                <input name="admin[remember_me]" type="hidden" value="0" />
                <input type="checkbox" value="1" name="admin[remember_me]" id="admin_remember_me" />
                Remember Me
                </label>
              </div>
              <input type="submit" class="btn btn-lg btn-success btn-block" name="commit" value="Login" />
            </fieldset>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>