<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Stores Db</h1>
  </div>
  <!-- /.col-lg-12 -->
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        All Stores
      </div>
      <div class="panel-body">
        <table class="table table-bordered table-stores">
          <thead>
            <tr>
              <th>Name</th>
              <th>Address</th>
            </tr>
          </thead>
          <tbody>
            <% @stores.each do |store| %>
            <tr>
              <td><%= link_to store.name, edit_admin_store_path(store.id) %></td>
              <td><%= store.address %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
  </div>
  <!-- /.col-lg-12 -->
</div>